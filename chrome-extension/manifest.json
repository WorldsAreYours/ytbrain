{
  "manifest_version": 3,
  "name": "YouTube Transcript Grabber",
  "version": "1.0",
  "description": "Grab transcripts from all open YouTube tabs.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://www.youtube.com/watch*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 